{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 13
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-cond-assign": "off"
  },
  "globals": {
    "describe": "readonly",
    "it": "readonly"
  }
}